{
  "ConnectionStrings": {
    "Redis": "redis:6379"
  },
  "Keycloak": {
    "Authority": "http://keycloak:8080/realms/EcommercePlatform",
    "Audience": "payment-service",
    "RequireHttpsMetadata": false,
    "ClientId": "payment-service"
  },
  "Redis": {
    "InstanceName": "PaymentService_",
    "DefaultExpirationMinutes": 60
  },
  "JwtSettings": {
    "Issuer": "PaymentService",
    "Audience": "EcommercePlatform",
    "ExpiryMinutes": 60
  },
  "Bkash": {
    "BaseUrl": "https://tokenized.sandbox.bka.sh/v1.2.0-beta/tokenized",
    "GrantTokenUrl": "/checkout/token/grant",
    "CreatePaymentUrl": "/checkout/create",
    "ExecutePaymentUrl": "/checkout/execute",
    "SuccessUrl": "https://localhost:4200/payment-success",
    "CancelUrl": "https://localhost:4200/payment-cancel"
  },
  "Stripe": {
    "SuccessUrl": "https://localhost:4200/payment-success",
    "CancelUrl": "https://localhost:4200/payment-cancel"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ServiceConfig": {
    "OrderServiceUrl": "https://localhost:7038"
  }
}
